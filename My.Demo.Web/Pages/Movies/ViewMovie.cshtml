@page "{id:int}"
@model My.Demo.Web.Pages.Movies.ViewMovieModel
@{
    ViewData["Title"] = "Movie Details";
}

<div class="card">
    <div class="card-header bg-dark text-white">
        <h1>@Model.Movie.Title</h1>
    </div>
    <div class="card-body">
        <form>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="@Model.Movie.Year"></label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="@Model.Movie.Year" readonly />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="@Model.Movie.Genre"></label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="@Model.Movie.Genre" readonly />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="@Model.Movie.Language"></label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="@Model.Movie.Language" readonly />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a class="btn btn-primary" asp-page="ListMovies">Back to Movie List</a>
</div>