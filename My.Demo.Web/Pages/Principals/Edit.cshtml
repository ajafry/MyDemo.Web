@page "{id:int?}"
@model My.Demo.Web.Pages.Principals.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Principal</h1>
<form method="post">
    <div class="form-group">
        <input asp-for="@Model.Principal.Id" style="display:none" />
        <label asp-for="@Model.Principal.Name"></label>
        <input asp-for="@Model.Principal.Name" class="form-control" />
        <br />
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-secondary" asp-page="List">Cancel</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}